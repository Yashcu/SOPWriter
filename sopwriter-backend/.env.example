# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://admin:admin123@localhost:27017/gdocs_dev?authSource=admin

# Email Configuration
FROM_EMAIL=noreply@gdocs.com
ADMIN_NOTIFY_EMAIL=admin@gdocs.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Alternative: SendGrid
# SENDGRID_API_KEY=your-sendgrid-key

# Security
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long-change-this

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Default Fallback Values (Optional - only used if database settings are empty)
# These are shown to users if admin hasn't configured via admin panel
DEFAULT_CONTACT_PHONE=+1234567890
DEFAULT_WHATSAPP=1234567890
DEFAULT_CONTACT_EMAIL=info@example.com
DEFAULT_SUPPORT_EMAIL=support@example.com
DEFAULT_UPI_ID=example@upi
DEFAULT_QR_IMAGE=/qr.jpg
